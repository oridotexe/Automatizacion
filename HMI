<body>
<div id="container">
    <button id="startButton" onclick="startProcess()">Iniciar</button>
    <button id="resetButton" onclick="resetProcess()">Detener</button>
    
    <div id="machine">
        <div id="feedingArea"></div>
        <div id="materialCylinder"></div>
        <div id="mold"></div>
    </div>

    <div id="belt"></div>
    <div id="product"></div>
    <div id="containerFilled"></div>
</div>

<script>
    let isProcessRunning = false;
    let isProcessReset = false;

    function startProcess() {
        if (isProcessRunning || isProcessReset) return;  
        
        isProcessRunning = true;
        runProcessCycle();
    }

    function resetProcess() {
        isProcessRunning = false;
        isProcessReset = true;

        const elements = {
            containerFilled: document.getElementById("containerFilled"),
            materialCylinder: document.getElementById("materialCylinder"),
            mold: document.getElementById("mold"),
            product: document.getElementById("product")
        };

        Object.values(elements).forEach(el => {
            el.style.height = '0px';
            el.style.backgroundColor = '#e0e0e0';
            el.style.visibility = 'hidden';
        });

        elements.materialCylinder.style.height = '40px'; 
        elements.containerFilled.style.height = '0';     
        elements.product.style.visibility = 'hidden';  
        elements.mold.style.backgroundColor = '#e0e0e0'; 
        elements.mold.style.visibility = 'visible'; 
        elements.product.style.left = '50%';

        isProcessReset = false;
    }

    function runProcessCycle() {
        const containerFilled = document.getElementById("containerFilled");
        const materialCylinder = document.getElementById("materialCylinder");
        const mold = document.getElementById("mold");
        const product = document.getElementById("product");
        const belt = document.getElementById("belt");


        containerFilled.style.height = '50px';

        setTimeout(() => {
            containerFilled.style.height = '0';
            materialCylinder.style.height = '120px';
            materialCylinder.style.backgroundColor = '#ff4500';
        }, 2000);

        setTimeout(() => {
            materialCylinder.style.height = '0';
            mold.style.backgroundColor = '#ff4500';
        }, 4000);

        setTimeout(() => {
            mold.style.backgroundColor = '#2196F3';
            product.style.visibility = 'visible';
        }, 7000);

        setTimeout(() => {
            product.style.left = (mold.offsetLeft + mold.offsetWidth / 2 - 15) + 'px';
        }, 7000);

        setTimeout(() => {
            product.style.transition = 'left 5s linear';
            product.style.left = belt.offsetLeft + 'px';
        }, 8000);

        setTimeout(() => {
            product.style.left = (belt.offsetLeft + belt.offsetWidth - 30) + 'px';
        }, 8200);

        setTimeout(() => {
            product.style.visibility = 'hidden';
            mold.style.backgroundColor = '#e0e0e0';
            mold.style.visibility = 'visible'; 
            if (isProcessRunning) {
                runProcessCycle();
            }
        }, 13000);
    }
</script>
</body>
</html>
