        }

        #resetButton {
            left: 120px;
            background-color: #f44336; 
            color: white;
        }

        #machine {
            position: absolute;
            bottom: 100px;
            left: 20%;
            transform: translateX(-50%);
            width: 200px;
            height: 50px;
