    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Machine HMI Interface</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #e6f7ff;
        }

        #container {
            width: 600px;
            height: 400px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
        }

        #startButton, #resetButton {
            position: absolute;
            top: 10px;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            z-index: 20;
        }

        #startButton {
            left: 20px;
            background-color: #4CAF50; 
            color: white;
        }

        #resetButton {
            left: 120px;
            background-color: #f44336; 
            color: white;
        }

        #machine {
            position: absolute;
            bottom: 100px;
            left: 20%;
            transform: translateX(-50%);
            width: 200px;
            height: 50px;
            background-color: #e0e0e0;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            padding: 10px;
            flex-direction: column;
        }

        #feedingArea {
            position: absolute;
            top: -30px;
            left: 5%;
            width: 0;
            height: 0;
            border-left: 30px solid transparent;
            border-right: 30px solid transparent;
            border-bottom: 30px solid #a8d08d;
            z-index: 10;
            transform: rotate(180deg);
        }

        #materialCylinder {
            position: relative;
            width: 200px;
            height: 40px;
            background-color: #e0e0e0; 
            border-radius: 5px;
            margin-top: 10px;
        }

        #mold {
            position: absolute;
            width: 100px;
            height: 60px;
            background-color: #e0e0e0;
            border-radius: 10px;
            bottom: 5px;
            left: 125%;
            transform: translateX(-50%);
            z-index: 5;
            visibility: visible; 
        }

        #product {
            position: absolute;
            bottom: 15px;
            left: 50%;
            width: 30px;
            height: 30px;
            background-color: #76b6eb; 
            border-radius: 50%;
            transform: translateX(-50%);
            visibility: hidden;
        }

        #belt {
            position: absolute;
            bottom: 0;
            left: 40%;
            width: 80%;
            height: 30px;
            background-color: #333;
            border-radius: 5px;
        }

        #containerFilled {
            position: absolute;
            bottom: 100px;
            left: 20%;
            transform: translateX(-50%);
            width: 200px;
            height: 0;
            background-color: #a8d08d;
            border-radius: 10px;
            z-index: 3;
            transition: height 2s ease;
        }
